---
export interface Props {
  id: string;
  title: string;
  items: string[];
  gradient: string;
}

const { id, title, items, gradient } = Astro.props;

// Icon mapping for different section types
const getIcon = (sectionId: string): string => {
  if (sectionId.includes('highlights')) return 'âœ¨';
  if (sectionId.includes('features')) return 'ðŸš€';
  if (sectionId.includes('improvements')) return 'âš¡';
  if (sectionId.includes('bugfixes')) return 'ðŸ”§';
  return 'ðŸ“‹';
