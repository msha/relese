const sectionIcon = getIcon(id);
---

<section class="release-section" id={id} data-section={id} aria-labelledby={`${id}-title`}>
  <header class="release-section__header">
    <h3 id={`${id}-title`} class="release-section__title" style={`--section-gradient: ${gradient}`}>
      <span class="release-section__icon" aria-hidden="true">{sectionIcon}</span>
      {title}
    </h3>
  </header>

  <div class="release-section__content">
    <ul class="release-section__list">
      {items.map((item, index) => (
        <li key={index} class="release-section__item">
          <span class="release-section__bullet" aria-hidden="true"></span>
          <span class="release-section__text">{item}</span>
        </li>
      ))}
    </ul>
  </div>
</section>

<style>
  .release-section {
    padding: var(--spacing-lg) 0;
  }

  .release-section__header {
    margin-bottom: var(--spacing-lg);
  }

  .release-section__title {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-bold);
    margin: 0;
    background: var(--section-gradient);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    line-height: var(--line-height-tight);
  }

  .release-section__icon {
    font-size: var(--font-size-lg);
    flex-shrink: 0;
  }

  .release-section__content {
    margin-left: calc(var(--font-size-lg) + var(--spacing-md));
  }

  .release-section__list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .release-section__item {
    display: flex;
    align-items: flex-start;
    gap: var(--spacing-md);
    padding: var(--spacing-sm) 0;
    position: relative;
  }

  .release-section__bullet {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: var(--section-gradient);
    flex-shrink: 0;
    margin-top: 0.7em;
    position: relative;
  }

  .release-section__bullet::before {
    content: '';
    position: absolute;
    inset: -3px;
    border-radius: 50%;
    background: var(--section-gradient);
    opacity: 0.3;
    transition: opacity var(--transition-fast);
  }

  .release-section__text {
    flex: 1;
    font-size: var(--font-size-base);
    line-height: var(--line-height-relaxed);
    color: var(--text-primary);
    transition: color var(--transition-fast);
  }

  /* Add subtle hover effect to the entire item */
  .release-section__item {
    transition: all var(--transition-fast);
    border-radius: var(--radius-sm);
    padding: var(--spacing-sm) var(--spacing-md);
    margin: 0 calc(-1 * var(--spacing-md));
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .release-section__title {
      font-size: var(--font-size-lg);
      gap: var(--spacing-sm);
    }

    .release-section__content {
      margin-left: calc(var(--font-size-base) + var(--spacing-sm));
    }

    .release-section__text {
      font-size: var(--font-size-sm);
    }
  }

  @media (max-width: 480px) {
    .release-section {
      padding: var(--spacing-md) 0;
    }

    .release-section__content {
      margin-left: 0;
    }

    .release-section__item {
      margin: 0;
      padding: var(--spacing-sm) 0;
    }
  }

  /* Reduced motion support */
  @media (prefers-reduced-motion: reduce) {
    .release-section__item {
      transition: none;
    }

    .release-section__text {
      transition: none;
    }
  }

  /* High contrast mode */
  @media (prefers-contrast: high) {
    .release-section__bullet {
      background: var(--text-primary);
    }

    .release-section__bullet::before {
      background: var(--text-primary);
    }

    .release-section__text {
      color: var(--text-primary);
    }
  }
</style>