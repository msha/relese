---
import type { Release, Translations, Locale } from '../types/index.js';
import { formatDate } from '../i18n/utils.js';
import { generateReleaseId, generateSectionId } from '../data/utils.js';
import { getNestedTranslation } from '../i18n/utils.js';

export interface Props {
  release: Release;
  translations: Translations;
  locale: Locale;
}

const { release, translations, locale } = Astro.props;

const releaseDate = new Date(release.date);
const formattedDate = formatDate(releaseDate, locale);
const releaseId = generateReleaseId(release.version);

// Get type-specific styling
const getTypeColor = (type: string) => {
  switch (type) {
    case 'major':
      return '#ef4444'; // Red
    case 'minor':
      return '#8b5cf6'; // Purple
    case 'patch':
      return '#10b981'; // Emerald
    case 'hotfix':
      return '#f59e0b'; // Amber
    case 'initial':
      return '#6366f1'; // Indigo
    default:
      return '#8b5cf6';
  }
};

const typeColor = getTypeColor(release.type);

// Icon and gradient mapping for common keys, with defaults
const getIcon = (sectionId: string): string => {
  if (sectionId.includes('highlights')) return 'âœ¨';
  if (sectionId.includes('features')) return 'ðŸš€';
  if (sectionId.includes('improvements')) return 'âš¡';
  if (sectionId.includes('bugfixes')) return 'ðŸ”§';
  return 'ðŸ“‹';
};

const getGradient = (key: string) => {
  if (key.includes('highlights')) return 'var(--gradient-text-highlights)';
  if (key.includes('features')) return 'var(--gradient-text-features)';
  if (key.includes('improvements')) return 'var(--gradient-text-improvements)';
  if (key.includes('bugfixes')) return 'var(--gradient-text-bugfixes)';
  return 'var(--gradient-text-features)';
};

const humanize = (key: string) => key.replace(/[-_]+/g, ' ').replace(/\b\w/g, (c) => c.toUpperCase());
const getSectionTitle = (key: string) => {
  const t = getNestedTranslation(translations, `sections.${key}`);
  return t === `sections.${key}` ? humanize(key) : t;
};

// Build sections dynamically from content
const sections = Object.entries(release.content)
  .map(([key, items]) => ({
    id: key,
    title: getSectionTitle(key),
    items: items,
    gradient: getGradient(key),
    icon: getIcon(key),
  }))
  .filter(section => Array.isArray(section.items) && section.items.length > 0);
---

<section class="hero" id={releaseId} data-release={release.version} aria-labelledby="hero-title">
  <div class="hero__card glass">
    <div class="hero__header">
      <div class="hero__badge-container">
        <span class="hero__badge" style={`--type-color: ${typeColor}`}>
          {translations.currentVersion.latest}
        </span>
        <span class="hero__type-chip" style={`--type-color: ${typeColor}`}>
          {translations.releaseTypes[release.type]}
        </span>
      </div>

      <div class="hero__version-info">
        <h2 id="hero-title" class="hero__version">
          v{release.version}
        </h2>
        <p class="hero__date">
          {translations.currentVersion.releasedOn} {formattedDate}
        </p>
      </div>
    </div>

    <!-- Content sections -->
    <div class="hero__content">
      {sections.map((section) => (
        <div
          class="hero__section"
          id={generateSectionId(release.version, section.id)}
          data-section={generateSectionId(release.version, section.id)}
          aria-labelledby={`hero-${section.id}-title`}
        >
          <h3 id={`hero-${section.id}-title`} class="hero__section-title" style={`--section-gradient: ${section.gradient}`}>
            <span class="hero__section-icon" aria-hidden="true">{section.icon}</span>
            {section.title}
          </h3>
          <ul class="hero__section-list">
            {section.items.map((item, index) => (
              <li class="hero__section-item">
                <span class="hero__section-bullet" aria-hidden="true"></span>
                <span class="hero__section-text">{item}</span>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <!-- Ambient gradient background -->
    <div class="hero__gradient" aria-hidden="true"></div>
  </div>
</section>

<style>
  .hero {
    margin-bottom: var(--spacing-2xl);
  }

  .hero__card {
    position: relative;
    border-radius: var(--radius-xl);
    padding: var(--spacing-2xl);
    overflow: hidden;
    background: rgba(25, 27, 43, 0.9);
    backdrop-filter: blur(35px) saturate(1.6);
    border: 1px solid rgba(255, 255, 255, 0.15);
    box-shadow:
      0 12px 40px rgba(0, 0, 0, 0.3),
      0 0 0 1px rgba(139, 92, 246, 0.15),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
    transition: all var(--transition-normal);
  }

  .hero__header {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
    margin-bottom: var(--spacing-xl);
  }

  .hero__badge-container {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    flex-wrap: wrap;
  }

  .hero__badge {
    display: inline-flex;
    align-items: center;
    padding: var(--spacing-sm) var(--spacing-lg);
    background: linear-gradient(135deg, var(--type-color), color-mix(in srgb, var(--type-color) 70%, transparent));
    color: white;
    border-radius: var(--radius-lg);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-bold);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    box-shadow: 0 4px 12px color-mix(in srgb, var(--type-color) 30%, transparent);
  }

  .hero__type-chip {
    display: inline-flex;
    align-items: center;
    padding: var(--spacing-xs) var(--spacing-md);
    background: color-mix(in srgb, var(--type-color) 20%, transparent);
    color: var(--type-color);
    border: 1px solid color-mix(in srgb, var(--type-color) 50%, transparent);
    border-radius: var(--radius-md);
    font-size: var(--font-size-xs);
    font-weight: var(--font-weight-medium);
    text-transform: capitalize;
  }

  .hero__version-info {
    flex: 1;
  }

  .hero__version {
    font-size: var(--font-size-3xl);
    font-weight: var(--font-weight-bold);
    color: var(--text-primary);
    margin: 0 0 var(--spacing-sm) 0;
    line-height: var(--line-height-tight);
    background: linear-gradient(135deg, var(--text-primary), var(--text-secondary));
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .hero__date {
    font-size: var(--font-size-lg);
    color: var(--text-secondary);
    margin: 0;
    font-weight: var(--font-weight-medium);
  }

  .hero__content {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xl);
    position: relative;
    z-index: 2;
  }

  .hero__section {
    padding: var(--spacing-lg) 0;
  }

  .hero__section-title {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-bold);
    margin: 0 0 var(--spacing-lg) 0;
    background: var(--section-gradient);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    line-height: var(--line-height-tight);
  }

  .hero__section-icon {
    font-size: var(--font-size-lg);
    flex-shrink: 0;
  }

  .hero__section-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .hero__section-item {
    display: flex;
    align-items: flex-start;
    gap: var(--spacing-md);
    padding: var(--spacing-sm) 0;
    transition: all var(--transition-fast);
    margin-left: calc(var(--font-size-lg) + var(--spacing-md));
    border-radius: var(--radius-sm);
  }

  .hero__section-bullet {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: var(--section-gradient);
    flex-shrink: 0;
    margin-top: 0.7em;
    position: relative;
  }

  .hero__section-bullet::before {
    content: '';
    position: absolute;
    inset: -3px;
    border-radius: 50%;
    background: var(--section-gradient);
    opacity: 0.3;
    transition: opacity var(--transition-fast);
  }

  .hero__section-item:hover .hero__section-bullet::before {
    opacity: 0.6;
  }

  .hero__section-text {
    flex: 1;
    font-size: var(--font-size-lg);
    line-height: var(--line-height-relaxed);
    color: var(--text-primary);
    font-weight: var(--font-weight-medium);
  }

  .hero__gradient {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(
      circle at 80% 20%,
      rgba(139, 92, 246, 0.12) 0%,
      rgba(99, 102, 241, 0.06) 50%,
      transparent 70%
    );
    filter: blur(1px);
    mix-blend-mode: screen;
    pointer-events: none;
    z-index: 1;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .hero__card {
      padding: var(--spacing-xl);
    }

    .hero__header {
      gap: var(--spacing-md);
    }

    .hero__badge-container {
      gap: var(--spacing-sm);
    }

    .hero__version {
      font-size: var(--font-size-2xl);
    }

    .hero__date {
      font-size: var(--font-size-base);
    }

    .hero__section-title {
      font-size: var(--font-size-lg);
      gap: var(--spacing-sm);
    }

    .hero__section-text {
      font-size: var(--font-size-base);
    }

    .hero__section-item {
      margin-left: calc(var(--font-size-base) + var(--spacing-sm));
    }

  }

  @media (max-width: 480px) {
    .hero__card {
      padding: var(--spacing-lg);
    }

    .hero__version {
      font-size: var(--font-size-xl);
    }

    .hero__badge-container {
      flex-direction: column;
      align-items: flex-start;
    }

    .hero__section {
      padding: var(--spacing-md) 0;
    }

    .hero__section-item {
      margin-left: 0;
      padding: var(--spacing-sm) 0;
    }

    .hero__section-item:hover {
      transform: none;
      background: transparent;
    }
  }

  /* Reduced motion support */
  @media (prefers-reduced-motion: reduce) {
    .hero__card {
      transition: none;
    }

    .hero__section-item {
      transition: none;
    }
  }

  /* High contrast mode */
  @media (prefers-contrast: high) {
    .hero__badge {
      background: var(--type-color);
      border: 2px solid white;
    }

    .hero__type-chip {
      border-width: 2px;
    }

    .hero__section-item {
      border-width: 2px;
    }

    .hero__section-bullet {
      background: var(--text-primary);
    }

    .hero__section-bullet::before {
      background: var(--text-primary);
    }

    .hero__section-text {
      color: var(--text-primary);
    }
  }
</style>