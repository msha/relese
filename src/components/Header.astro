---
import type { Locale, Translations } from '../types/index.js';
import ThemeLanguageSelector from '../islands/ThemeLanguageSelector.tsx';

export interface Props {
  translations: Translations;
  locale: Locale;
}

const { translations, locale } = Astro.props;
---

<header class="header" role="banner">
  <div class="header__container">
    <!-- Apple Control Center Style Grid -->
    <div class="header__control-grid">

      <!-- Main Info Card (Brand + Description + Always Improving) -->
      <div class="control-card control-card--main">
        <div class="control-card__content">
          <div class="main-card__header">
            <div class="main-card__brand">
              <svg class="main-card__icon" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                <path d="M12 2L13.09 8.26L20 9L13.09 9.74L12 16L10.91 9.74L4 9L10.91 8.26L12 2Z"/>
              </svg>
              <div class="main-card__title-group">
                <span class="main-card__title">Nite Notes</span>
                <span class="main-card__version">v2.1.0</span>
              </div>
            </div>
          </div>

          <div class="main-card__content">
            <h1 class="main-card__page-title">{translations.page.title}</h1>
            <p class="main-card__subtitle">{translations.page.subtitle}</p>
            <p class="main-card__description">
              Stay up to date with the latest features, improvements, and fixes for Nite Notes.
            </p>

            <div class="main-card__feature">
              <div class="main-card__feature-icon">
                <svg viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                  <path d="M12 2L2 7V10C2 16 6 20.5 12 22C18 20.5 22 16 22 10V7L12 2Z"/>
                </svg>
              </div>
              <div class="main-card__feature-text">
                <h3 class="main-card__feature-title">Always Improving</h3>
                <p class="main-card__feature-desc">Continuous updates and improvements to deliver the best experience.</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Controls Card (Theme + Language) -->
      <div class="control-card control-card--controls">
        <div class="control-card__content">
          <ThemeLanguageSelector currentLocale={locale} client:load />
        </div>
      </div>

      <!-- Stats Row -->
      <div class="stats-row">
        <div class="control-card control-card--stat control-card--releases">
          <div class="control-card__content">
            <div class="stat-card__number">50+</div>
            <div class="stat-card__label">Releases</div>
          </div>
        </div>

        <div class="control-card control-card--stat control-card--stars">
          <div class="control-card__content">
            <div class="stat-card__number">2.1K</div>
            <div class="stat-card__label">GitHub Stars</div>
          </div>
        </div>

        <div class="control-card control-card--stat control-card--uptime">
          <div class="control-card__content">
            <div class="stat-card__number">99.9%</div>
            <div class="stat-card__label">Uptime</div>
          </div>
        </div>
      </div>

    </div>
  </div>

</header>

<style>
  .header {
    position: relative;
    padding: var(--spacing-2xl) 0;
    overflow: hidden;
    background: transparent;
  }

  .header__container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 var(--gutter-desktop);
    position: relative;
    z-index: 2;
  }

  /* Apple Control Center Grid Layout */
  .header__control-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    grid-template-areas:
      "main controls"
      "stats stats";
    gap: var(--spacing-lg);
    width: 100%;
  }

  /* Stats Row */
  .stats-row {
    grid-area: stats;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-lg);
  }

  /* Base Control Card Styling */
  .control-card {
    position: relative;
    border-radius: 24px;
    padding: var(--spacing-2xl);
    overflow: hidden;
    background: linear-gradient(135deg,
      rgba(25, 27, 43, 0.9) 0%,
      rgba(20, 22, 38, 0.85) 50%,
      rgba(30, 32, 48, 0.9) 100%);
    backdrop-filter: blur(40px) saturate(1.8);
    border: 1px solid rgba(255, 255, 255, 0.15);
    box-shadow:
      0 16px 40px rgba(0, 0, 0, 0.4),
      0 8px 20px rgba(139, 92, 246, 0.1),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
    transition: all var(--transition-normal);
  }

  .control-card:hover {
    background: linear-gradient(135deg,
      rgba(30, 32, 48, 0.95) 0%,
      rgba(25, 27, 43, 0.9) 50%,
      rgba(35, 37, 53, 0.95) 100%);
    border-color: rgba(255, 255, 255, 0.25);
    box-shadow:
      0 24px 60px rgba(0, 0, 0, 0.5),
      0 12px 30px rgba(139, 92, 246, 0.2),
      inset 0 2px 0 rgba(255, 255, 255, 0.15);
  }

  .control-card__content {
    position: relative;
    z-index: 2;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  /* Grid Area Assignments */
  .control-card--main { grid-area: main; }
  .control-card--controls { grid-area: controls; }

  /* Main Card (Brand + Description + Feature) */
  .control-card--main {
    background: linear-gradient(135deg,
      rgba(139, 92, 246, 0.2) 0%,
      rgba(25, 27, 43, 0.9) 30%,
      rgba(30, 32, 48, 0.9) 100%);
    padding: var(--spacing-2xl);
    min-height: 300px;
  }

  .main-card__header {
    margin-bottom: var(--spacing-xl);
  }

  .main-card__brand {
    display: flex;
    align-items: center;
    gap: var(--spacing-lg);
  }

  .main-card__icon {
    width: 48px;
    height: 48px;
    color: var(--accent-purple);
    filter: drop-shadow(0 0 12px rgba(139, 92, 246, 0.4));
  }

  .main-card__title-group {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
  }

  .main-card__title {
    font-size: var(--font-size-3xl);
    font-weight: var(--font-weight-bold);
    background: linear-gradient(135deg, var(--accent-purple), var(--accent-indigo));
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    filter: drop-shadow(0 0 6px rgba(139, 92, 246, 0.3));
  }

  .main-card__version {
    padding: var(--spacing-xs) var(--spacing-md);
    background: linear-gradient(135deg,
      rgba(139, 92, 246, 0.4) 0%,
      rgba(99, 102, 241, 0.3) 100%);
    color: rgba(255, 255, 255, 0.95);
    border: 1px solid rgba(139, 92, 246, 0.5);
    border-radius: 16px;
    font-size: var(--font-size-xs);
    font-weight: var(--font-weight-bold);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    backdrop-filter: blur(15px);
    box-shadow: 0 4px 16px rgba(139, 92, 246, 0.2);
  }

  .main-card__page-title {
    font-size: var(--font-size-4xl);
    font-weight: var(--font-weight-bold);
    color: var(--text-primary);
    margin: 0 0 var(--spacing-sm) 0;
    line-height: var(--line-height-tight);
    background: linear-gradient(135deg, var(--text-primary), var(--text-secondary));
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .main-card__subtitle {
    font-size: var(--font-size-xl);
    color: var(--text-secondary);
    margin: 0 0 var(--spacing-md) 0;
    line-height: var(--line-height-normal);
    font-weight: var(--font-weight-medium);
  }

  .main-card__description {
    font-size: var(--font-size-base);
    color: var(--text-secondary);
    line-height: var(--line-height-relaxed);
    margin: 0 0 var(--spacing-xl) 0;
  }

  .main-card__feature {
    display: flex;
    align-items: center;
    gap: var(--spacing-lg);
    padding: var(--spacing-lg);
    background: rgba(255, 255, 255, 0.05);
    border-radius: 16px;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .main-card__feature-icon {
    width: 48px;
    height: 48px;
    padding: var(--spacing-md);
    background: linear-gradient(135deg,
      var(--accent-emerald) 0%,
      var(--accent-purple) 100%);
    border-radius: 12px;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 8px 20px rgba(16, 185, 129, 0.3);
    flex-shrink: 0;
  }

  .main-card__feature-icon svg {
    width: 24px;
    height: 24px;
  }

  .main-card__feature-title {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-bold);
    color: var(--text-primary);
    margin: 0 0 var(--spacing-xs) 0;
    background: linear-gradient(135deg, var(--text-primary), var(--accent-emerald));
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .main-card__feature-desc {
    font-size: var(--font-size-sm);
    color: var(--text-secondary);
    margin: 0;
    line-height: var(--line-height-relaxed);
  }


  /* Stats Cards Styling */
  .control-card--stat {
    text-align: center;
    justify-content: center;
    min-height: 120px;
    background: linear-gradient(135deg,
      rgba(79, 70, 229, 0.15) 0%,
      rgba(25, 27, 43, 0.9) 30%,
      rgba(30, 32, 48, 0.9) 100%);
  }

  .control-card--stat .control-card__content {
    justify-content: center;
    align-items: center;
  }

  .stat-card__number {
    font-size: var(--font-size-3xl);
    font-weight: var(--font-weight-bold);
    color: var(--text-primary);
    margin-bottom: var(--spacing-sm);
    background: linear-gradient(135deg, var(--accent-emerald), var(--accent-purple));
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    filter: drop-shadow(0 0 4px rgba(139, 92, 246, 0.3));
  }

  .stat-card__label {
    font-size: var(--font-size-sm);
    color: var(--text-secondary);
    font-weight: var(--font-weight-medium);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    opacity: 0.8;
  }


  /* Controls Card Styling */
  .control-card--controls {
    min-height: auto;
    padding: var(--spacing-2xl);
    width: auto;
    height: fit-content;
    justify-self: end;
    background: linear-gradient(135deg,
      rgba(99, 102, 241, 0.15) 0%,
      rgba(25, 27, 43, 0.9) 30%,
      rgba(30, 32, 48, 0.9) 100%);
  }

  .control-card--controls .control-card__content {
    justify-content: flex-end;
    align-items: flex-start;
  }


  /* Responsive Design */
  @media (max-width: 1024px) {
    .header__container {
      padding: 0 var(--gutter-tablet);
    }

    .header__control-grid {
      grid-template-columns: 1fr;
      grid-template-areas:
        "main"
        "controls"
        "stats";
    }

    .stats-row {
      grid-template-columns: repeat(3, 1fr);
    }

    .control-card {
      padding: var(--spacing-xl);
    }

    .control-card--main {
      padding: var(--spacing-2xl);
    }
  }

  @media (max-width: 768px) {
    .header {
      padding: var(--spacing-lg) 0;
    }

    .header__container {
      padding: 0 var(--gutter-mobile);
    }

    .header__control-grid {
      grid-template-columns: 1fr;
      grid-template-areas:
        "main"
        "controls"
        "stats";
      gap: var(--spacing-md);
    }

    .stats-row {
      grid-template-columns: 1fr;
      gap: var(--spacing-md);
    }

    .control-card {
      padding: var(--spacing-lg);
      border-radius: 20px;
    }

    .control-card--main {
      padding: var(--spacing-xl);
      min-height: auto;
    }

    .control-card--stat {
      min-height: 100px;
    }

    .control-card--controls {
      min-height: 50px;
      padding: var(--spacing-sm);
    }

    .main-card__page-title {
      font-size: var(--font-size-3xl);
    }

    .main-card__feature {
      flex-direction: column;
      text-align: center;
      gap: var(--spacing-md);
    }

    .stat-card__number {
      font-size: var(--font-size-2xl);
    }
  }

  @media (max-width: 480px) {
    .control-card {
      padding: var(--spacing-md);
      border-radius: 16px;
    }

    .control-card--main {
      padding: var(--spacing-lg);
    }

    .main-card__title {
      font-size: var(--font-size-2xl);
    }

    .main-card__icon {
      width: 36px;
      height: 36px;
    }

    .main-card__page-title {
      font-size: var(--font-size-2xl);
    }

    .main-card__title-group {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--spacing-xs);
    }

    .main-card__feature-icon {
      width: 40px;
      height: 40px;
    }

    .main-card__feature-icon svg {
      width: 20px;
      height: 20px;
    }
  }
</style>